    {
      "path": "dist/react-chartjs3-wrapper.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "husky": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chart.js": "^3.1.0",
    "chartjs-chart-geo": "^3.9.0",
    "lodash-es": "^4.17.21"
  }
